   </footer>
<script type="text/javascript">
  let memberP1= document.getElementById("confirm-member-p1");
  let memberP2= document.getElementById("confirm-member-p2");
  let listname1 = document.createElement('p');
  let listname2 = document.createElement('p');
    let userId = document.getElementById("userId");
    let userpass= document.getElementById("userpass");
    function loginButtonClick() {
        let trueFalse = true;
        if (userId.value == "") {
            listname1.innerText = "お客様番号が未入力です";
            memberP1.appendChild(listname1);
            listname1.style.color = "red";
            trueFalse = false;
        }else if( /^[a-zA-Z0-9!-/:-@¥[-`{-~]*$/.test(userId.value)){
            listname1.innerText = "";
        }else{
            listname1.innerText = "お客様番号は半角英数字記号のみで記入して下さい";
            memberP1.appendChild(listname1);
            listname1.style.color = "red";
            trueFalse = false;
    }
if (userpass.value == "") {
            listname2.innerText = "passwordが未入力です";
            memberP2.appendChild(listname2);
            listname2.style.color = "red";
            trueFalse = false;
        }else if( /^[a-zA-Z0-9!-/:-@¥[-`{-~]*$/.test(userpass.value)){
            listname2.innerText = "";
      
        }else{
            listname2.innerText = "passwordは半角英数字記号のみで記入して下さい";
            memberP2.appendChild(listname2);
            listname2.style.color = "red";
            trueFalse = false;
    }
if(listname1.innerText == "" && listname2.innerText == ""){
    document.formSubmit.submit()
}
}
</script>

